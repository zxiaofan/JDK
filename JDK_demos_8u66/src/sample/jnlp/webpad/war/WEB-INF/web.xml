<web-app>

  <servlet>
       <servlet-name>
            JnlpDownloadServlet
       </servlet-name>
       <servlet-class>
            com.sun.javaws.servlet.JnlpDownloadServlet
       </servlet-class>
       
       <init-param>
           <param-name>
             logLevel
           </param-name>

           <param-value>
             DEBUG
           </param-value>
         </init-param>

         <init-param>
           <param-name>
             logPath
           </param-name>

           <param-value>
             d:\logs\jnlpdownloadservlet.log
           </param-value>
       </init-param>
         
  </servlet>
  
  <servlet>
       <servlet-name>
            TxtServlet
       </servlet-name>
       <servlet-class>
            TxtServlet
       </servlet-class>
  </servlet>
  
  <servlet-mapping>
      <servlet-name>JnlpDownloadServlet</servlet-name>
      <url-pattern>*.jnlp</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
      <servlet-name>JnlpDownloadServlet</servlet-name>
      <url-pattern>*.jar</url-pattern>
  </servlet-mapping>
    
  <servlet-mapping>
      <servlet-name>TxtServlet</servlet-name>
      <url-pattern>publish</url-pattern>
  </servlet-mapping>
    
</web-app>
